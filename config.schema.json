{
    "pluginAlias": "LoxonePlatform",
    "Name": "Homebridge-Loxone-Proxy",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "host": {
                "type": "string",
                "required": true
            },
            "port": {
                "type": "integer",
                "default": "80",
                "required": true
            },
            "username": {
                "type": "string",
                "required": true
            },
            "password": {
                "type": "string",
                "required": true
            },
            "options": {
                "type": "object",
                "title": "Options",
                "properties": {
                    "MoodSwitches": {
                        "type": "string",
                        "default": "enabled",
                        "enum": ["enabled","disabled"]
                    }
                }
            },
            "Exclusions": {
                "type": "object",
                "title": "Excluded Items",
                "properties": {
                    "Exclusions": {
                        "type": "string"
                    }
                }
            },
            "switchAlias": {
                "type": "object",
                "title": "Switch aliases",
                "properties": {
                    "Lock": {
                        "type": "string"
                    }
                }
            },
            "InfoOnlyDigitalAlias": {
                "type": "object",
                "title": "InfoOnlyDigital aliases",
                "properties": {
                    "Motion": {
                        "type": "string"
                    }
                }
            },
            "InfoOnlyAnalogAlias": {
                "type": "object",
                "title": "InfoOnlyAnalog aliases",
                "properties": {
                    "Brightness": {
                        "type": "string"
                    },
                    "Humidity": {
                        "type": "string"
                    },
                    "Temperature": {
                        "type": "string"
                    }
                }
            }
        }
    }
}